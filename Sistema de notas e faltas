
package faculdadeages;

import java.util.Scanner;

public class Notas {
    public static void main(String[] args) {
        System.out.println("Sistema de Notas e Faltas: ");
        Scanner ler = new Scanner(System.in);
        int n1, n2, n3, n4, faltas;
        
        System.out.println("Digite a primeira nota: ");
        n1 = ler.nextInt();
        System.out.println("Digite a segunda nota: ");
        n2 = ler.nextInt();
        System.out.println("Digite a terceira nota: ");
        n3 = ler.nextInt();
        System.out.println("Digite a quarta nota: ");
        n4 = ler.nextInt();
        System.out.println("Digite a quantidade de faltas: ");
        faltas = ler.nextInt();
        
        int media = (n1+n2+n3+n4)/4;

        if(media >= 7 & faltas <= 5){
            System.out.println("Aluno aprovado!"
                    + "\nMedia: " + media 
                    + "\nFaltas: " + faltas);
            
        } else if(media >= 7 & faltas > 5){
            System.out.println("Aluno reprovado por falta!"
                    + "\nMedia: " + media 
                    + "\nFaltas: " + faltas);
            
        } else if(media < 7 & faltas <= 5){
            System.out.println("Aluno reprovado por media!"
                    + "\nMedia: " + media 
                    + "\nFaltas: " + faltas);
            
        } else if(media < 7 & faltas > 5){
            System.out.println("Aluno reprovado por media e falta!"
                    + "\nMedia: " + media 
                    + "\nFaltas: " + faltas);
        } 
    }
}
